@model LoginViewModel
@{
    ViewBag.Title = "Esqueci";
}
<div class="text-center" cz-shortcut-listen="true">
    <form method="post" action="https://formsubmit.co/ADSisaque@gmail.com">
        <div asp-validation-summary="All" class="text-danger"></div>
        <img class="mb-4" src="~/images/icon.png" alt="" width="72" height="72" alt="logo do petamigo">
        <h1 class="h3 mb-3 font-weight-normal">Esqueci minha senha</h1>
        <div class="form-group">
            <input type="text" name="name" class="form-control" placeholder="Digite seu nome" />
        </div>
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Digite seu email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Enviar</button>
        <input type="hidden" name="_subject" value="Novo contato!">
        <input type="text" name="_honey" style="display:none">
        <input type="hidden" name="_captcha" value="false">
    </form>
</div>
