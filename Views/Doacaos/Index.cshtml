@model IEnumerable<PetAmigoMVC.Models.Doacao>

@{
    ViewData["Title"] = "Adoção";
}

<table id="myTable" class="table">
    <thead>
        <tr>
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.Raca)
            </th>
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.Usuario)
            </th >
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.Imgurl)
            </th>
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.Estado)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.Cep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.Raca)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.Usuario)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td style="text-align:center;">
                    <img width="250px" height="150px" style="border-radius:25px;" src="@Html.DisplayFor(modelItem => item.Imgurl)" alt="imagem do pet">
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
@*                <td>
                    @Html.DisplayFor(modelItem => item.Cep)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/images/icons8-edit-64.png" alt="Editar" style="width:50px;height:50px;" alt="botão editar"></a>
                    <a asp-action="Details" asp-route-id="@item.Id"><img src="~/images/icons8-search-64.png" alt="Detalhes" style="width:50px;height:50px;" alt="botão detalhes"></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/images/icons8-delete-64.png" alt="Deletar" style="width:50px;height:50px;" alt="botão deletar"></a>
                </td>
            </tr>
        }

    </tbody>
</table>
