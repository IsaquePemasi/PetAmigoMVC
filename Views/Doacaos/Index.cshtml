@model IEnumerable<PetAmigoMVC.Models.Doacao>

@{
    ViewData["Title"] = "Adoção";
}

@*<h1>Adoção</h1>*@

@*<p>
    <a asp-action="Create">Doar Pet</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.Raca)
            </th>
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.Usuario)
            </th >
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.Imgurl)
            </th>
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.Estado)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.Cep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.Raca)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.Usuario)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td style="text-align:center;">
                    <img width="250px" height="150px" style="border-radius:25px;" src="@Html.DisplayFor(modelItem => item.Imgurl)">
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
@*                <td>
                    @Html.DisplayFor(modelItem => item.Cep)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/images/icons8-edit.gif" alt="Editar" style="width:50px;height:50px;"></a>
                    <a asp-action="Details" asp-route-id="@item.Id"><img src="~/images/icons8-search.gif" alt="Detalhes" style="width:50px;height:50px;"></a>
                <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/images/icons8-delete.gif" alt="Deletar" style="width:50px;height:50px;"></a>
                </td>
            </tr>
        }

    </tbody>

</table>
